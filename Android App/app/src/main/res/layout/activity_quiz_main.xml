<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/homepagbackground"
    tools:context=".QuizActivityMain">

    <ImageView
        android:id="@+id/backbutton"
        android:padding="15dp"
        android:elevation="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/backbutton"
        app:tint="@color/white" />
    <ScrollView
        android:layout_width="match_parent"
        android:paddingTop="20dp"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:weightSum="10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:paddingTop="15dp"
                android:paddingLeft="20dp"
                android:elevation="8dp"

                android:orientation="vertical">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:elevation="8dp"
                    android:src="@drawable/quizicon"
                    app:tint="@color/primary_green" />

                <!--                <TextView-->
                <!--                    android:layout_width="match_parent"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    android:text="Home"-->
                <!--                    android:textColor="@color/white"-->
                <!--                    android:textSize="30dp"-->
                <!--                    android:fontFamily="sans-serif-black"-->
                <!--                    />-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:elevation="8dp"
                    android:text="Quiz"
                    android:textSize="20dp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/white"
                    />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="Click on any category and answer the given questions!" />


            </LinearLayout>
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="20dp"
                android:background="@drawable/roundedcorners"
                android:backgroundTint="@color/background_grey"
                android:columnCount="1"
                android:rowCount="4">
                <androidx.cardview.widget.CardView
                    android:id="@+id/QuizCommonNames"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"

                    android:padding="20dp"
                    app:cardBackgroundColor="@color/secondary_grey"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="8dp"
                    app:cardUseCompatPadding="true"

                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:gravity="center"

                        android:paddingVertical= "45dp"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/baseline_local_florist_24"
                            app:tint="@color/primary_green"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Common names"
                            android:textColor="@color/light_grey"
                            android:textStyle="bold"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:paddingTop="5dp"
                            android:text="Can you guess the common names of all the trees in our school?"
                            android:textColor="@color/light_grey"
                            android:textSize="12dp"/>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/QuizMedicine"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    android:padding="20dp"
                    app:cardBackgroundColor="@color/secondary_grey"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="8dp"
                    app:cardUseCompatPadding="true"

                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:gravity="center"
                        android:paddingVertical= "45dp"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/baseline_local_hospital_24"
                            app:tint="@color/primary_green"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Medicinal values"
                            android:textColor="@color/light_grey"
                            android:textStyle="bold"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:paddingTop="5dp"
                            android:maxWidth="300dp"
                            android:text="Some of the trees in our school hold great medicinal powers! Can you guess them?"
                            android:textColor="@color/light_grey"
                            android:textSize="12dp"/>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/QuizPicture"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_row="2"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    android:padding="20dp"
                    app:cardBackgroundColor="@color/secondary_grey"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="8dp"
                    app:cardUseCompatPadding="true"

                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:gravity="center"
                        android:paddingVertical= "45dp"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/baseline_photo_24"
                            app:tint="@color/primary_green"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Identify the picture"
                            android:textColor="@color/light_grey"
                            android:textStyle="bold"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:paddingTop="5dp"
                            android:text="Can you name these beautiful trees just by looking at them?"
                            android:textColor="@color/light_grey"
                            android:textSize="12dp"/>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/QuizScientific"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_row="3"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    android:padding="20dp"
                    app:cardBackgroundColor="@color/secondary_grey"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="8dp"
                    app:cardUseCompatPadding="true"

                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:gravity="center"
                        android:paddingVertical= "45dp"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/baseline_local_florist_24"
                            app:tint="@color/primary_green"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Scientific Classification"
                            android:textColor="@color/light_grey"
                            android:textStyle="bold"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:paddingTop="5dp"
                            android:maxWidth="300dp"
                            android:text="Can you the remember the scientific names and classifications of the trees?"
                            android:textColor="@color/light_grey"
                            android:textSize="12dp"/>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </GridLayout>
<!--            <RelativeLayout-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content">-->
<!--                <ImageView-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="50dp"-->
<!--                    android:src="@drawable/baseline_photo_24">-->

<!--                </ImageView>-->



<!--            </RelativeLayout>-->





        </LinearLayout>
    </ScrollView>


</RelativeLayout>